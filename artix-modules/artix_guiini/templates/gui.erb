[GUI]
; Выбор интерфейса для отображения - тачевый, клавиатурный, комбинированный, текстовый (touch, keyboard, combined, tui).
; По умолчанию keyboard
interface = <%= @gui_interface %>

; Показывать курсор мыши.
; По умолчанию false
showCursor = <%= @guiinterface %>

; Количество знаков после запятой для отображения денежных полей
; Также влияет на диалоги ввода цены
; По умолчанию 2
pricePrecisionToShow = <%= @pricePrecisionToShow %>

; Отображать денежные суммы с разделением трехзначных числовых разрядов
; Также влияет на диалоги ввода цены
; По умолчанию false
priceThousandSeparate = <%= @priceThousandSeparate %>

; Отображать баланс бонусной карты кассиру
; По умолчанию true
showBonusBalance = <%= @showBonusBalance %>

; Отображать название группы товара при добавлении позиции
; По умолчанию false
showGroupInPositionInfo = <%= @showGroupInPositionInfo %>

; Изменять цвет фона на красный при переходе в режим возврата
; По умолчанию false
changeBackgroudColorOnBack = <%= @changeBackgroudColorOnBack %>

; Отображать оповещение "Внимание: требуется контроль возраста" в верхней строке кассовой программы и изменять цвет диалога проверки возраста на красный
; По умолчанию false
notableAgeVerify = <%= @notableAgeVerify %>

; Путь до файла с иконкой маркетинговой акции
marketingActionPixmap = <%= @marketingActionPixmap %>

